<Window x:Class="CecoChat.Client.Wpf.Views.Main.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:main="clr-namespace:CecoChat.Client.Wpf.Views.Main"
        xmlns:connect="clr-namespace:CecoChat.Client.Wpf.Views.Connect"
        xmlns:allChats="clr-namespace:CecoChat.Client.Wpf.Views.AllChats"
        mc:Ignorable="d"
        Title="CecoChat"
        MinWidth="300" Width="700"
        MinHeight="300" Height="700">
  <Window.DataContext>
    <main:MainViewModel x:Name="ViewModel"/>
  </Window.DataContext>
  <Grid>
    <connect:ConnectControl DataContext="{Binding Path=ConnectVM}"
                            HorizontalAlignment="Stretch"/>
    <allChats:AllChatsControl DataContext="{Binding Path=AllChatsVM}"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch"/>
  </Grid>
</Window>
